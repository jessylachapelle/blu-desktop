<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:id="window"
      fx:controller="controller.WindowController">
  <VBox fx:id="menu">
    <MenuBar>
      <Menu text="Fichier">
        <MenuItem text="Déconnecter"/>
        <MenuItem fx:id="exit" text="Quitter"/>
      </Menu>
      <Menu text="Édition">
        <MenuItem text="Paramètres"/>
      </Menu>
      <Menu text="Aide">
        <MenuItem fx:id="about" text="À propos"/>
        <MenuItem text="Documentation"/>
        <MenuItem text="License"/>
      </Menu>
    </MenuBar>

    <HBox>
      <VBox fx:id="sideMenu" styleClass="aside" >
        <ImageView fitHeight="135.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
          <Image url="@../images/logo.png"/>
        </ImageView>
        <Button fx:id="btnSearch"/>
        <Button fx:id="btnItemForm"/>
        <Button fx:id="btnMemberForm"/>
        <Button fx:id="btnAdmin"/>
      </VBox>

      <VBox styleClass="main" spacing="10">
        <Button styleClass="form-button" fx:id="btnBack" text="Back"/>
        <Pane fx:id="mainPanel" />
      </VBox>
    </HBox>
  </VBox>
</Pane>
