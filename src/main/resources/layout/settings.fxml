<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import layout.DynamicVBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>


<DynamicVBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SettingsController">
  <Label styleClass="h1" text="Paramètres"/>

  <Label styleClass="h2" text="Langue"/>
  <ComboBox fx:id="cbLang"/>

  <Label styleClass="h2" text="Calibrer le lecteur à code à barres"/>
  <Button styleClass="form-button" fx:id="btnCalibrate" text="Calibrer"/>

  <AnchorPane>
    <HBox spacing="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
      <Button styleClass="form-button" fx:id="btnCancel" text="Annuler"/>
      <Button styleClass="form-button" fx:id="btnSave" text="Enregistrer"/>
    </HBox>
  </AnchorPane>
</DynamicVBox>
